# .env.example
# Copy this file to .env and update with your actual values

# App Configuration
REACT_APP_NAME=EduConnect
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:3001/api
REACT_APP_API_TIMEOUT=10000

# Authentication
REACT_APP_JWT_SECRET=your-jwt-secret-key
REACT_APP_SESSION_TIMEOUT=3600000

# Third-party Services
REACT_APP_GOOGLE_CLIENT_ID=your-google-client-id
REACT_APP_FIREBASE_API_KEY=your-firebase-api-key
REACT_APP_FIREBASE_AUTH_DOMAIN=your-app.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-project-id

# File Upload
REACT_APP_MAX_FILE_SIZE=5242880
REACT_APP_ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png

# Features
REACT_APP_ENABLE_CHATBOT=true
REACT_APP_ENABLE_VIDEO_CALLS=false
REACT_APP_ENABLE_PAYMENTS=false

# Development
REACT_APP_DEBUG=true
REACT_APP_LOG_LEVEL=debug

# Analytics (optional)
REACT_APP_GOOGLE_ANALYTICS_ID=your-ga-id
REACT_APP_MIXPANEL_TOKEN=your-mixpanel-token

# .env.local (for local development)
# Add your local overrides here